                ],
                "summary": "Crear una nueva mascota",
                "operationId": "7ef45de4bf722d348a63d7f462b44898",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre",
                                    "especie",
                                    "raza",
                                    "edad",
                                    "descripcion",
                                    "estado"
                                ],
                                "properties": {
                                    "nombre": {
                                        "type": "string"
                                    },
                                    "especie": {
                                        "type": "string"
                                    },
                                    "raza": {
                                        "type": "string"
                                    },
                                    "edad": {
                                        "type": "integer"
                                    },
                                    "descripcion": {
                                        "type": "string"
                                    },
                                    "estado": {
                                        "type": "string",
                                        "enum": [
                                            "disponible",
                                            "en proceso de adopción",
                                            "adoptado"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
