        "/api/solicitudes": {
            "get": {
                "tags": [
                    "Solicitudes de Adopción"
                ],
                "summary": "Listar todas las solicitudes de adopción",
                "operationId": "7e61361aa7a24c0dc1b8b569584e7835",
                "responses": {
                    "200": {
                        "description": "Listado de solicitudes de adopción"
                    }
                }
            },
            "post": {
                "tags": [
                    "Solicitudes de Adopción"
                ],
                "summary": "Crear una nueva solicitud de adopción",
                "operationId": "5225435ceee3f52b474cb709095c170c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "usuario_id",
                                    "mascota_id",
                                    "fecha_solicitud",
                                    "estado"
                                ],
                                "properties": {
                                    "usuario_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "mascota_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "fecha_solicitud": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-05-01"
                                    },
                                    "estado": {
                                        "type": "string",
                                        "enum": [
                                            "pendiente",
                                            "aprobada",
                                            "rechazada"
                                        ],
                                        "example": "pendiente"
                                    },
                                    "comentario": {
                                        "type": "string",
                                        "example": "Me encantaría adoptar a esta mascota"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Solicitud de adopción creada"
                    }
                }
            }
        },
